    <script>
                function getShoppingCart() {
            const cookieName = "ShoopingCartCookie";
            const cookieArray = document.cookie.split("; ");

            for (let cookie of cookieArray) {
                if (cookie.startsWith(cookieName + "=")) {
                    const cookieValue = cookie.substring(cookie.indexOf("=") + 1);
                    try {
                        const cart = JSON.parse(atob(cookieValue));
                        // Force convert arrays to objects
                        if (Array.isArray(cart)) {
                            return {};
                        }
                        return cart && typeof cart === "object" ? cart : {};
                    } catch {
                        return {};
                    }
                }
            }
            return {};
        }

        function saveCart(cart) {
            const cartString = btoa(JSON.stringify(cart));
            const date = new Date();
            date.setDate(date.getDate() + 365);
            const expires = date.toUTCString();
            document.cookie = `ShoopingCartCookie=${cartString}; expires=${expires}; path=/; SameSite=Strict; Secure`;
        }

        function addToCart(button, id) {
            const cart = getShoppingCart();

            // treat it like array but safely in object form
            if (!cart[id]) {
                cart[id] = 1;
            } else {
                cart[id]++;
            }

            saveCart(cart);
            button.innerHTML = "Added <i class='bi bi-check-lg'></i>";

            // calculate total
            let cartSize = 0;
            for (const key in cart) {
                cartSize += Number(cart[key]);
            }

            document.getElementById("CartSize").innerText = cartSize;
           
        }

        function increase(id){
			let cart = getShoppingCart();
			let quantity = cart[id];
			if(isNaN(quantity)){
				cart[id] = 1;
			}
            else{
				cart[id] = Number(quantity) + 1;
            }
			saveCart(cart);
			location.reload();
        }

        function decrease(id){
            let cart = getShoppingCart();
            let quantity = cart[id];
            if(isNaN(quantity)){
                return
            }

			quantity = Number(quantity);
            if(quantity > 1){
				cart[id] = quantity - 1
				saveCart(cart);
				location.reload();
            }
        }

		function remove(id){
			let cart = getShoppingCart();
            if(cart[id]){
                delete cart[id];
                saveCart(cart);
                location.reload();
            }
		}

	</script>

