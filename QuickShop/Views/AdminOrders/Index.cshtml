
@{
}
<h3 class="text-center mb-4">List Of Orders</h3>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Client</th>
			<th>Units</th>
			<th>Total</th>
			<th>Payment Method</th>
			<th>Payment Status</th>
			<th>Order Status</th>
			<th>Date</th>
			<th>Action</th>
		</tr>
	</thead>

	<tbody>

		@foreach(Order order in ViewBag.Orders)
		{
			int count = 0;
			decimal total = 0;
			foreach (OrderItem item in order.OrderItems)
			{
				count += item.Quantity;
				total += item.Quantity * item.UnitPrice;
			}

			string paymentbadge = "bg-success";
			if(order.PaymentStatus == "Pending")
			{
				paymentbadge = "bg-warning text-dark";
			}
			else if (order.PaymentStatus == "Canceled")
			{
				paymentbadge = "bg-danger";

			}
			else if (order.PaymentStatus == "Accepted")
			{
				paymentbadge = "bg-success";

			}

			string orderbadge = "bg-success";

			if (order.OrderStatus == "Created")
			{
				orderbadge = "bg-warning text-dark";
			}
			else if (order.OrderStatus == "Canceled")
			{
				orderbadge = "bg-danger";

			}
			else if (order.OrderStatus == "Accepted")
			{
				orderbadge = "bg-success";

			}
			else if (order.OrderStatus == "Shipped")
			{
				orderbadge = "bg-primary";

			}
			else if (order.OrderStatus == "Delivered")
			{
				orderbadge = "bg-success";

			}
			else if (order.OrderStatus == "Returned")
			{
				orderbadge = "bg-info text-dark";

			}
			else if (order.OrderStatus == "Deleted")
			{
				orderbadge = "bg-dark";

			}

			<tr>
			<td>@order.Id</td>
			<td>@(order.Client.FirstName +" "+ order.Client.LastName )</td>
			<td>@count</td> 
			<td>@(total)$</td>
			<td>@order.PaymentMethod</td>
			<td>
					<span class="badge rounded-pill @paymentbadge">@order.PaymentStatus</span>
			</td>
			<td>
					<span class="badge rounded-pill @orderbadge">@order.OrderStatus</span>
			</td>
			<td>@order.CreatedAt.ToString("dd/MM/yyyy")</td>
			<td>
				<a class="btn btn-sm btn-primary" asp-controller="AdminOrders" asp-action="Details" asp-route-id="@order.Id">Details</a>
			</td>
			</tr>
		}

	</tbody>
</table>

<nav>
	<ul class="pagination">
		@for (int i = 1; i <= ViewBag.totalPages; i++)
		{

			string active = "";
			if (i == ViewBag.pageIndex)
			{
				active = "active";

			}
			<li class="page-item @active ">
				<a class="page-link" asp-route-pageIndex="@i">@i</a>
				  
			</li>
		}
	</ul>
</nav>
