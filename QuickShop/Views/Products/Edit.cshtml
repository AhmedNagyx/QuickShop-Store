@model ProductDto

<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">Edit Book</h2>

		<form method="post" enctype="multipart/form-data">
			<div class="form-group mb-3">
				<label for="Id">Id</label>
				<input class="form-control-plaintext" readonly value="@ViewData["ProductId"]" />
				
			</div>
			<div class="form-group mb-3">
				<label for="Name">Name</label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<label for="Brand">Brand</label>
				<input asp-for="Brand" class="form-control" />
				<span asp-validation-for="Brand" class="text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<label for="Category">Category</label>
				<select class="form-select" asp-for="Category">
					<option value="Other">Other</option>
					<option value="Laptops">Laptops</option>
					<option value="Desktops">Desktops</option>
					<option value="Accessories">Accessories</option>
					<option value="Gaming">Gaming</option>
					<option value="Monitors">Monitors</option>
					<option value="Audio">Audio</option>
					<option value="Storage">Storage</option>
					<option value="Drones">Drones</option>
					<option value="Smartphones">Smartphones</option>


				</select>
				<span asp-validation-for="Category" class="text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<label for="Price">Price</label>
				<input asp-for="Price" class="form-control" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<label for="Description">Description</label>
				<textarea class="form-control" asp-for="Description"></textarea>
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="row mb-3">
				<div class="offset-sm-4 col-sm-8">
					<img src="/Images/@ViewData["ImageFileName"]" width="159" />
				</div>
			</div>
			<div class="form-group mb-3">
				<label for="ImageFile">Product Image</label>
				<input asp-for="ImageFile" type="file" class="form-control" />
				
			</div>
			<div class="row-mb-3">
				<label class="col-sm-4 col-form-label">Created At</label>
				<input class="form-control-plaintext" readonly value="@ViewData["CreatedAt"]" />
			</div>
			<div class="row">
				<div class="form-group text-center offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-success">Confirm</button>
				</div>
				<div class="form-group text-center col-sm-4 d-grid">
					<a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Cancel</a>
				</div>
			</div>

		</form>
	</div>
</div>