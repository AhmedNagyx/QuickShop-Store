@model PasswordDto
@{
}

<div class="mx-auto rounded border p-3" style="width: 500px">
		<h2 class="text-center mb-3">Edit Password</h2>
		<hr/>

		@if (ViewBag.ErrorMessage != null)
		{
			<div class="alert alert-danger">
				@ViewBag.ErrorMessage
			</div>
		}
		else if (ViewBag.SuccessMessage != null)
		{
			<div class="alert alert-success">
				@ViewBag.SuccessMessage
			</div>
		}

		<form method="post">
		<div class="row mb-2">
			<label class="col-sm-4 col-form-label">Current Password</label>
			<div class="col-sm-8">
				<input class="form-control" type="password" asp-for="CurrentPassword" />
				<span asp-validation-for="CurrentPassword" class="text-danger"></span>
			</div>
		</div>
		<div class="row mb-2">
			<label class="col-sm-4 col-form-label">New Password</label>
			<div class="col-sm-8">
				<input class="form-control" type="password" asp-for="NewPassword" />
				<span asp-validation-for="NewPassword" class="text-danger"></span>
			</div>
		</div>
		<div class="row mb-2">
			<label class="col-sm-4 col-form-label">Confirm Password</label>
			<div class="col-sm-8">
				<input class="form-control" type="password" asp-for="ConfirmPassword" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
		</div>
		<div class=" row">
			<div class="offset-sm-4 col d-grid">
				<button type="submit" class="btn btn-success">Submit</button>
			</div>
			<div class="col d-grid">
				<a asp-action="Profile" asp-controller="Account" class="btn btn-secondary" role="button">Cancel</a>
			</div>
		</div>
		</form>
</div>